{
  "compilerOptions": {
    "target": "ES2020",                  
    "module": "ESNext",                  
    "moduleResolution": "Node",
    "outDir": "dist",                    
    "rootDir": "src",                    
    "strict": true,                      
    "esModuleInterop": true,             
    "skipLibCheck": true,                
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "@services/*": ["services/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}